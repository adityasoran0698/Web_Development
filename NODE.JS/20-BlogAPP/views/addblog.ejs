<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Blogs</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Simonetta:ital,wght@0,400;0,900;1,900&display=swap');


        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            height: calc(100vh - 80.64px);
            width: 100%;
            display: flex;
            justify-content: center;
        }



        .box {
            width: 80%;
            height: 65%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin-top: 6rem;
        }

        .form {
            font-size: 20px;
            /* border: 1px solid; */
            border-radius: 10px;
            padding: 15px;

        }

        input {
            width: 100%;
            height: 4rem;
            font-size: 25px;
            border-radius: 10px;
            padding-left: 5px;
            border: 1px solid rgb(0, 0, 0);
            background-color: transparent;
            margin-top: 5px;
            margin-left: 5px;

        }

        textarea {
            width: 100%;
            height: auto;
            font-size: 25px;
            border-radius: 10px;
            padding-left: 5px;
            border: 1px solid rgb(0, 0, 0);
            background-color: transparent;
            margin-top: 5px;
            margin-left: 5px;


        }

        button {
            font-size: 25px;
            padding: 4px;
            border-radius: 5px;
            background-color: rgb(27, 106, 217);
            color: white;
            border: none;
            width: 10%
        }

        #cover-image {
            border: none;
        }

        .box h1 {
            text-align: center;
            margin-bottom: 20px;
            margin-top: 10px;
            font-size: 35px;
            font-family: "DM Serif Text", serif;
            font-weight: 400;
            font-style: normal;
        }

        .box label {
            font-family: "Josefin Sans", sans-serif;
            font-optical-sizing: auto;
            font-weight: 450;
            font-style: normal;
            font-size: 23px
        }

        .choose-file {
            font-size: 15px;
        }
    </style>
</head>

<body>
    <%- include("./partials/nav") %>
        <div class="container">

            <div class="box">

                <h1>Add a Blog Post</h1>
                <% if (!locals.editblog) { %>
                    <form class="form" method="post" enctype="multipart/form-data" action="/blog/addblogs">
                        <label for="cover-image">Cover Image:</label> <br>
                        <input type="file" id="cover-image" name="coverImageURL" class="choose-file">
                        <br><br>
                        <label for="title">Title:</label> <br>
                        <input type="text" id="title" name="title">
                        <br><br>
                        <label for="body">Body:</label> <br>
                        <textarea name="body" placeholder="Write your content here..." rows="5"></textarea><br><br>
                        <button type="submit">Submit</button>
                    </form>
                    <% } else { %>
                        <form class="form" method="post" action="/blog/update/<%= editblog.id %>">
                            <label for="cover-image">Cover Image:</label> <br>
                            <input type="file" id="cover-image" name="coverImageURL" class="choose-file"
                                value="<%= editblog.coverImageURL %>">
                            <br><br>
                            <label for="title">Title:</label> <br>
                            <input type="text" id="title" name="title" value="<%= editblog.title %>">
                            <br><br>
                            <label for="body">Body:</label> <br>
                            <textarea name="body" placeholder="Write your content here..."
                                rows="5"><%= editblog.body %></textarea><br><br>
                            <button type="submit">Submit</button>
                        </form>
                        <% } %>

            </div>
        </div>
</body>

</html>