<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blogs</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            height: 100vh;
            width: 100vw;
            display: flex;
            flex-direction: column;
        }

        .box {
            height: auto;
            width: 100%;
            display: flex;
            flex-wrap: wrap;
        }

        h3 {

            margin: 15px;
            font-size: 23px;
            word-wrap: break-word;
            overflow-wrap: break-word;
            white-space: normal;
        }

        .blogs {
            box-shadow: 1px 1px 10px 2px rgb(142, 142, 142);
            width: 340px;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            margin: 2rem;
            height: auto;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }


        .blogs:hover {
            box-shadow: 2px 2px 10px 3px black;
            transform: scale(1.07);
            border: none;
        }



        .coverimages {
            width: 100%;
            height: 60%;
            overflow: hidden;
        }

        .coverimages img {
            height: 100%;
            width: 100%;
            object-fit: cover;
            display: block;
        }




        .no-blog {
            font-size: 60px;
            text-align: center;
            margin-top: 3rem;
            width: 100%;
            color: rgb(90, 89, 88);
        }

        .buttons {
            width: 100%;
            height: 50px;
            padding: 10px;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

        .view-btn {
            background-color: rgb(0, 149, 255);
            border: none;
            font-size: 17px;
            padding: 5px;
            margin: 10px;
            width: 5rem;
            border-radius: 5px;
            color: white;
            cursor: pointer;
        }

        .view-btn i {
            margin-right: 3px
        }

        .edit-btn {
            background-color: rgb(255, 174, 0);
            border: none;
            font-size: 15px;
            padding: 5px;
            margin: 10px;
            width: 5rem;
            cursor: pointer;
            border-radius: 5px;
            color: white;
        }

        .edit-btn i {
            margin-right: 3px
        }

        .dlt-btn {
            background-color: rgb(255, 55, 55);
            border: none;
            font-size: 17px;
            padding: 5px;
            margin: 10px;
            border-radius: 5px;
            color: white;
            width: 6rem;
            cursor: pointer;
        }

        .dlt-btn i {
            margin-right: 3px
        }
    </style>
</head>

<body>
    <div class="container">

        <%- include('./partials/nav') %>
            <div class="box">
                <% if (myblogs.length===0) { %>
                    <h1 class="no-blog">No Blogs</h1>
                    <% } %>
                        <% myblogs.forEach(blog=> { %>
                            <div class="blogs">
                                <div class="coverimages">
                                    <img src="<%= blog.coverImageURL %>" alt="" class="coverimage">
                                </div>


                                <h3>
                                    <%= blog.title %>
                                </h3>
                                <div class="buttons">
                                    <a href="/blog/<%= blog._id %>"> <button class="view-btn"><i
                                                class="ri-eye-line"></i>View</button>
                                    </a>
                                    <a href="/blog/update/<%= blog._id  %>"><button class="edit-btn"><i
                                                class="ri-edit-box-line"></i>Edit</button></a>
                                    <form method="post" action="/blog/dlt/<%= blog._id %>">
                                        <button type="submit" class="dlt-btn"><i
                                                class="ri-delete-bin-line"></i>Delete</button>
                                    </form>

                                </div>

                            </div>
                            <% }) %>
            </div>
    </div>
</body>

</html>